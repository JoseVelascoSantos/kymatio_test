{
  "compilerOptions": {
    "lib": ["DOM", "ES2017"], // Agrega ES2015 o superior
    "target": "ES2017",       // Asegúrate de que el objetivo también sea ES2015 o superior
    "module": "ESNext",
    "types": ["vitest/globals"], // Incluye los tipos globales de Vitest
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src", "tests", "vite.config.ts"] // Asegúrate de incluir la configuración de Vite
}
